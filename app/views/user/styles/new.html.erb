<%= form_for [:user, :client, @style], html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :season %>
  <%= f.text_field :season %>

  <%= f.file_field :image %>

  <%= f.submit %>
<% end %>
