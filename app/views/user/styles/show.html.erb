<div class="style-info">
  <%= link_to "#{@client.name}", user_client_path(@client), class: 'back' %>
  <h2><%= @style.name %></h2>
  <div class='style-data'>
    <table>
      <tr>
        <th>Quantity</th>
        <th>Sewing Labor</th>
        <th>Price Quote</th>
        <th>Season</th>
      </tr>
      <tr>
        <td><%= @style.amount %></td>
        <td><%= number_to_currency(@style.labor_cost) %></td>
        <td><%= number_to_currency(@style.cost) %></td>
        <td><%= @style.season %></td>      
      </tr>
    </table>
    <p><%= image_tag @style.image.url, size: "100%" %></p>
  </div>
  <%= link_to "Edit Style", edit_user_client_style_path(@style.client, @style), class: 'edit-style-btn' %>
</div>
